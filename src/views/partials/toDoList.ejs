<% if (todos && todos.length > 0) { %>
  <ul>
    <% todos.forEach(todo => { %>
      <li>
        <%= todo.title %> - <%= todo.description %>
        <button class="editButton" type="button" data-id="<%= todo.id %>" data-title="<%= todo.title %>" data-description="<%= todo.description %>">Editar</button>
        <button class="deleteButton" type="button" data-id="<%= todo.id %>" data-title="<%= todo.title %>">Remover</button>
      </li>
    </ul>
<% }); %>
<% } else { %>
  <p>Nenhum ToDo cadastrado ainda.</p>
<% } %>
